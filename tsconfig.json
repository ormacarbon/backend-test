{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["ES6"],
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/server.ts"],
    "exclude": ["node_modules"]
}